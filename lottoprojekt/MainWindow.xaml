<Window x:Class="LottoProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Icon="lotto.ico" 
        Title="Lotto Simulation" Height="400" Width="500">
        
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Lotto Simulation" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>

            <Button Name="btnStart" Content="Ziehung starten" Height="40" Click="btnStart_Click"/>

            <ListBox Name="lstTreffer" Margin="0,20,0,10" Height="150"/>

            <TextBlock Name="txtGeld" FontSize="16" FontWeight="SemiBold" TextAlignment="Center"/>

        </StackPanel>
    </Grid>
</Window>
